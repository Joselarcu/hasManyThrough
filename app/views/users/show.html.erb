<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<table>
	<thead>
	  <tr>
	    <th>Projects:</th>
	    <th colspan="3"></th>
	  </tr>
	</thead>
  <tbody>
		<% @user.projects.each do |project| %>
		<tr>
			<td><%= project.name %></td>
			<td><%= link_to 'Show', user_project_path(@user,project) %></td>
      <td><%= link_to 'Edit', edit_user_project_path(@user, project) %></td>
      <td><%= link_to 'Destroy', [@user,project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %> 
  </tbody>
</table>
<p>
<%= link_to 'Add project', new_user_project_path(@user) %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
